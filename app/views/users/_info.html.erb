<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count,user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
  <tr>
  <% if current_user != user%>
    <% if current_user.following?(user) %>
      <th><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: 'btn btn-primary' %></th>
    <% else %>
      <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: 'btn btn-success' %></th>
    <% end %>
  <% end %>
    <th>
      <% unless @user.id == current_user.id %>    <!--現在ログインしているユーザーではない場合-->
        <% if @is_room == true %>    <!--既にルームが作成されている場合は-->
          <%= link_to "ダイレクトメッセージ", room_path(@room_id) %>    <!--そのチャットルームに遷移するボタンを表示-->
        <% else %>
          <%= form_with model: @room, local: true do |f|%>    <!--roomsテーブルに情報を送信-->
            <%= fields_for @entry do |e| %>    <!--room_usersテーブルに情報を送信-->
              <%= e.hidden_field :user_id, value: @user.id %>  <!--room_usersテーブルにuser_idを含める-->
            <% end %>
            <%= f.submit "chatを始める" %>
          <% end %>
        <% end %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>