<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	  <h1>Editing Group</h1>
  	  <%= form_with model: @group, url: group_path(@group.id), method: :patch do |f| %>
  	    <%= f.text_field :name %>
  	    <%= f.text_field :introduction %>
  	    <%= f.file_field :image %>
  	    <%= f.submit "Update" %>
  	  <% end %>
  </div>
</div>
